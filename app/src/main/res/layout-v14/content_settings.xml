<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tk.neunbbgg.vertretungsplan.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Entwickler"
        android:id="@+id/btnentw"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:textSize="30dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/btnver"
        android:layout_below="@+id/btnentw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textAlignment="textStart" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tbnacht"
        android:layout_below="@+id/btnver"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:checked="false"
        android:visibility="invisible" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Github"
        android:textAllCaps="false"
        android:id="@+id/btngithub"
        android:layout_alignTop="@+id/tbnacht"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textAlignment="textStart" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibkontakt"
        android:layout_below="@+id/btngithub"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/orange_circle"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Kontakt"
        android:id="@+id/bkontakt"
        android:layout_below="@+id/btngithub"
        android:layout_toRightOf="@+id/ibkontakt"
        android:layout_toEndOf="@+id/ibkontakt"
        android:layout_alignBottom="@+id/ibkontakt"
        android:textAlignment="textStart"
        android:textSize="30dp" />

</RelativeLayout>
